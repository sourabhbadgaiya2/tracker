<%- include("./partials/header") %> <%- include("./partials/navbar") %>

<div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2">
  <form
    class="flex rounded-lg px-8 py-7 flex-col gap-3 justify-center items-center border border-zinc-800 w-[28vw]"
    action="/users/forget-password/<%= id %>"
    method="post"
  >
    <h1 class="text-2xl w-full">
      <a href="/users/forget-password"><i class="ri-arrow-left-line"></i></a>
    </h1>
    <div class="leading-[1.3] text-center ">
      <h1 class="text-lg">Recovery</h1>
      <p class="text-zinc-700">Enter OTP to recover password.</p>
    </div>
    <input
      class="block outline-none rounded-lg px-3 bg-transparent border border-zinc-800 py-2 w-full"
      type="number"
      name="otp"
      placeholder="OTP"

    />
    <button class="bg-[#0095F6] rounded-2xl w-full py-2 font-bold text-md">
      Recover
    </button>
  </form>
</div>

<%- include("./partials/footer") %>
