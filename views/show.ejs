<%- include("./partials/header") %> <%- include("./partials/navbar") %>

<h1 class="m-3">
  <a
    class="text-xl border border-white px-3 py-1 rounded-full"
    href="/users/profile"
  >
    <i class="ri-arrow-left-line"></i> back</a
  >
</h1>
<div class="p-10 text-white absolute left-[20vw]">
  <% if (user.posts.length > 0) { %>
  <ul class="list-disc text-lg">
    <% user.posts.forEach((post) => { %>
    <li>
      <a class="text-blue-400" href="/posts/details"><%= post.title %></a>
    </li>
    <% }) %>
  </ul>
  <% } else { %>
  <p class="text-lg text-zinc-500">Not yet</p>
  <% } %>
</div>

<%- include("./partials/footer") %>
